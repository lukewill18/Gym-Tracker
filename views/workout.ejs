    <body>
        <div id="workout-page">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="#">Gym Tracker</a>
                <i class="nav-item nav-link fas fa-users" id="friends-btn"></i>
                <i class="nav-item nav-link fas fa-bell" id="notifications-btn"></i>
                <i class="nav-item nav-link fas fa-sign-out-alt" id="logout-btn"></i>
            </nav>
            <div id="notifications" class="nav-popup hidden"></div>
            <div id="friends" class="nav-popup hidden"></div>
            <div id="btn-group-container">
                <div class="btn-group" id="workout-select-btns">
                    <button type="button" class="btn btn-info">Workout A</button>
                    <button type="button" class="btn btn-info">Workout B</button>
                    <button type="button" class="btn btn-info">Workout C</button>
                </div>
            </div>
            <div class="accordion workout-accordion" id="accordion1">
                <form class="workout-form">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Squat
                                </button>
                            </h5>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion1">
                            <div class="card-body">
                                <div class="set">
                                    <h6>Set 1</h6>
                                    <div class="form-group">
                                        <label>Reps completed:</label>
                                        <input type="number" min="0">
                                    </div>
                                    <div class="form-group">
                                        <label>Weight used (lbs):</label>
                                        <input type="number" min="0">
                                    </div>
                                </div>
                                <div class="set">
                                    <h6>Set 2</h6>
                                    <label>Reps completed:</label>
                                    <input type="number" min="0">
                                    <label>Weight used (lbs):</label>
                                    <input type="number" min="0">
                                </div>
                                <div class="set">
                                    <h6>Set 3</h6>
                                    <label>Reps completed:</label>
                                    <input type="number" min="0">
                                    <label>Weight used (lbs):</label>
                                    <input type="number" min="0">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Deadlift
                                </button>
                            </h5>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion1">
