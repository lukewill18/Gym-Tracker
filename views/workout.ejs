                </form>
            </div>
            <div id="finish-btn-container">
                <button class="btn btn-info" id="finish-workout-btn">Finish Workout</button>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
